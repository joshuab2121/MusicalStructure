<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_music_library"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joshb.musicalstructure.MusicLibrary">

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/music_library_info"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_now_playing"
        style="@style/Button"
        android:layout_below="@id/info"
        android:text="@string/now_playing" />

    <Button
        android:id="@+id/btn_playlist"
        style="@style/Button"
        android:layout_below="@id/btn_now_playing"
        android:text="@string/playlist" />

    <Button
        android:id="@+id/btn_artist_detail"
        style="@style/Button"
        android:layout_below="@id/btn_playlist"
        android:text="@string/artist_detail" />

</RelativeLayout>
